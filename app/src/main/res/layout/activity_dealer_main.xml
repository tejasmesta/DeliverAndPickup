<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8FF"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivityDealers.DealerMainActivity">

    <include
        layout="@layout/custom_progressbar"
        android:id="@+id/dealers_page_progress"
        android:visibility="gone"
        >

    </include>


    <LinearLayout
        android:gravity="center"
        android:id="@+id/linearform"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FROM"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="25sp"
            >

        </TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="State">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dealer_from_state"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="City">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dealer_from_city"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TO"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="25sp"
            >

        </TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="State">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dealer_to_state"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="City">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dealer_to_city"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/dealer_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search for DriversðŸ”"
            android:layout_margin="10dp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:backgroundTint="#808000"
            android:layout_gravity="center_horizontal"
            >

        </Button>

        <Button
            android:id="@+id/my_bookings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Current bookings"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="#9ACD32"
            >

        </Button>

    </LinearLayout>

</LinearLayout>