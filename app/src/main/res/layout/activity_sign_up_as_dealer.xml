<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8FF"
    android:baselineAligned="false"
    tools:context=".signup.SignUpAsDealer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F0F8FF"
        android:layout_gravity="center"
        android:baselineAligned="false"
        android:gravity="center">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter your name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_dealer_page_name"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter your email">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_dealer_page_email"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter your mobile number">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_dealer_page_mobile"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:inputType="number"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Nature of material">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_dealer_page_nature"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Weight of material in kgs">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_dealer_page_weight"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:inputType="number"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Quantity">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_dealer_page_quantity"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:inputType="number"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Quantity">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/to_state_spinner"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:inputType="number"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>




        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Destination city">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_dealer_city_"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter your password">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_dealer_page_password"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Confirm your password"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_dealer_page_confirm_password"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:password="true"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/signup_as_a_dealer_page_signupbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SignUp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:backgroundTint="#2F4F4F"
            android:onClick="signupClick"
            >

        </Button>

    </LinearLayout>



</ScrollView>