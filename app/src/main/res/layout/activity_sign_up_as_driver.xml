<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8FF"
    android:baselineAligned="false"
    android:layout_marginBottom="10dp"
    tools:context=".signup.SignUpAsDriver">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:baselineAligned="false"
        android:background="#F0F8FF"
        android:layout_margin="10dp"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter your name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_driver_page_name"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter your age">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_driver_page_age"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:inputType="number"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter your email">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_driver_page_email"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter your mobile number">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_driver_page_mobile"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:inputType="number"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter your truck number">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_driver_page_truck_number"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Truck Capacity">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_driver_page_capacity"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:inputType="number"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Transporter Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_driver_page_trans_name"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Driving Experience in Years">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_driver_page_experience"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:inputType="number"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="1) Interested route state from">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_driver_state_1"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint=" - Interested route city from">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_driver_page_city_1"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="1) Interested route to state">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_driver_state_1_to"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint=" - Interested route to city">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_driver_page_city_1_to"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="2) Interested route state from">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_driver_state_2"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint=" - Interested route to city">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_driver_page_city_2"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="2) Interested route to state">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_driver_state_2_to"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint=" - Interested route to city">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_driver_page_city_2_to"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="3) Interested route state">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_driver_state_3"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint=" - Interested route city">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_driver_page_city_3"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="3) Interested route to state">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_driver_state_3_to"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint=" - Interested route to city">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_driver_page_city_3_to"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter your password">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_driver_page_password"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Confirm your password"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_as_driver_page_confirm_password"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:backgroundTint="#B0C4DE"
                android:password="true"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_margin="10dp"
            android:id="@+id/signup_as_a_driver_page_signupbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SignUp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:backgroundTint="#2F4F4F"
            android:layout_gravity="center_horizontal"
            android:onClick="signUP"
            >

        </Button>


    </LinearLayout>



</ScrollView>